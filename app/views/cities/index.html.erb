<%= render 'admin/navadmin' %>


<p id="notice"><%= notice %></p>

<h1>Cities</h1>
<div class="fix-table">


<table class="table table-striped table-hover">
  <thead class ="table-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @cities.each do |city| %>

      
      <tr>
        <td><%= city.name %></td>
       
        <td><%= link_to 'Show', city, :class=> "btn btn-info text-dark" %></td>
        <td><%= link_to 'Edit', edit_city_path(city), :class=> "btn btn-warning text-dark" %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } , :class=> "btn btn-danger text-white"%></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

</div>

<br>

<center>
<%= link_to 'New City', new_city_path, :class=> "btn btn-light text-dark" %>

<%= link_to "Adminhome",  admin_home_path , :class=> "btn btn-secondary text-white"%>
</center>