<%= render 'admin/navadmin' %>


<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<div class="fix-table">
<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Room type</th>
      <th>Description</th>
      <th>Price</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.no %></td>
        <td><%= room.room_type %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.hotel_id %></td>
        <td><%= link_to 'Show', room , :class=> "btn btn-info text-dark"%></td>
        <td><%= link_to 'Edit', edit_room_path(room) , :class=> "btn btn-warning text-dark"%></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<center>
<%= link_to 'New Room', new_room_path, :class=> "btn btn-success text-white" %>|
<%= link_to "Adminhome", admin_home_path, :class=> "btn btn-light text-dark" %>
</center>